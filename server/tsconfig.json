{
  "compilerOptions": {
    // Crucial for incremental migration
    "allowJs": true,

    // File Layout
    "rootDir": "./", 
    "outDir": "./dist",

    // Environment Settings
    "module": "nodenext",
    "target": "esnext",
    
    // For Node.js support
    "lib": ["esnext"],
    "types": ["node"],

    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Stricter Typechecking Options
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Recommended Options
    "strict": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true
  }
}